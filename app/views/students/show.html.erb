   <tr><td><strong>Board:</strong></td><td><%= @student.ssc_board %></td></tr>
   <tr><td><strong>Year of passing:</strong></td><td><%= @student.ssc_yop %></td></tr>
   <tr><td><strong>Aggregate Percentage:</strong></td><td><%= @student.ssc_aggr %></td></tr>

   <tr><td>Class XII Details</td><td></td></tr>
   <tr><td><strong>Board:</strong></td><td><%= @student.hsc_board %></td></tr>
    <tr><td><strong>Year of passing:</strong></td><td><%= @student.hsc_yop %></td></tr>
