<fieldset title="Finally">
  <legend></legend>
<table class ="table table-striped">
   <tr><td><strong>Education Gap</strong></td><td><%= @student.gap %></td></tr>

   <tr><td><strong>Placement Cell Registration Receipt:</strong></td><td><%= @student.regreceipt %></td></tr>

