<%- model_class = Student -%>


<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="form-actions">

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn' %>
</div>
<div id="step" >
<fieldset title="Basic Info">
  <legend></legend>
<table class ="table table-striped">
   <tr><td><strong>Name:</strong></td><td><%= @student.name %></td></tr>
   <tr><td><strong>Course:</strong></td><td><%= @student.course %></td></tr>
   <tr><td><strong>Department:</strong></td><td><%= @student.dept %></td></tr>
   <tr><td><strong>Batch:</strong></td><td><%= @student.batch %></td></tr>
   <tr><td><strong>Gender:</strong></td><td><%= @student.gender %></td></tr>
   <tr><td><strong>Date of Birth:</strong></td><td><%= @student.dob %></td></tr>
   <tr><td><strong>Email:</strong></td><td><%= @student.email %></td></tr>
   <tr><td><strong>Picture:</strong></td><td><%= image_tag(@student.picture_url) if @student.picture? %></td></tr>
   <tr><td><strong>Resume:</strong></td><td><%= link_to "download" , @student.resume_url %></td></tr>
</table>
</fieldset>

<fieldset title="Additional Info">
  <legend></legend>
<table class ="table table-striped">
   <tr><td><strong>Father's Name:</strong></td><td><%= @student.fname %></td></tr>
   <tr><td><strong>Mothers's Name:</strong></td><td><%= @student.mname %></td></tr>
   <tr><td><strong>Father's Job:</strong></td><td><%= @student.fjob %></td></tr>
   <tr><td><strong>Mother's Job:</strong></td><td><%= @student.mjob %></td></tr>
   <tr><td><strong>Permenant Address:</strong></td><td><%= @student.paddr %></td></tr>
   <tr><td><strong>Temporary Addrres:</strong></td><td><%= @student.taddr %></td></tr>
   <tr><td><strong>Height:</strong></td><td><%= @student.height %></td></tr>
   <tr><td><strong>Weight:</strong></td><td><%= @student.weight %></td></tr>
   <tr><td><strong>Eye power:</strong></td><td><%= @student.eye %></td></tr>
</table>
</fieldset>

<fieldset title="Contact Info">
  <legend></legend>
<table class ="table table-striped">
   <tr><td><strong>Mobile:</strong></td><td><%= @student.mobile %></td></tr>
   <tr><td><strong>Residence:</strong></td><td><%= @student.resiph %></td></tr>
   <tr><td><strong>Emergency Contact:</strong></td><td><%= @student.emerph %></td></tr>
   
</table>
</fieldset>

<fieldset title="School Details">
  <legend></legend>
<table class ="table table-striped">
   
